{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "rootDirs": ["src", "tests"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": { "~/*": ["./src/*"] },
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "erasableSyntaxOnly": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
